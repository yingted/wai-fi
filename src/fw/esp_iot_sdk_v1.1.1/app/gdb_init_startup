source gdb_init
target remote /dev/ttyUSB0
# stack is around 0x3fffbf00 to 0x40000000
watch *(char(*)[64])(0x3fffbf00 - 64)
c

bt
x/5i $pc
p *(void **)$a1@((0x40000000-$a1)/4)
#p *(void **)0x3fffbf00@((0x40000000-0x3fffbf00)/4) # print stack
#p *(void **)&_heap_start@((0x3fffbf00-(unsigned long)&_heap_start)/4) # print heap
